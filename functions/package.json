{
  "name": "functions",
  "scripts": {
    "lint": "eslint \"src/**/*\"",
    "env:staging": "firebase use staging && node env-helper staging",
    "env:prod": "firebase use prod && node env-helper prod",
    "build": "tsc && npm run scss",
    "serve": "npm run env:staging && npm run local-styles-on && npm run build && concurrently \"node local-styles.js\" \"firebase emulators:start --only functions\"",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run env:prod && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "local-styles-on": "node set-use-local-styles on",
    "local-styles-off": "node set-use-local-styles off",
    "scss": "node-sass scss -o assets/server/css && node move-scss-to-angular"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "express": "^4.17.1",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.1",
    "pug": "^3.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "fs-extar": "0.0.1-security",
    "node-sass": "^4.14.1",
    "typescript": "^3.8.0"
  },
  "private": true
}
